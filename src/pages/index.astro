---
// 5 Colors for the background, from lightest to darkest.
const bgSelection = ['#e0e1dd', '#778da9', '#415a77', '#1b263b', '#0d1b2a'];
let selectedIndex = bgSelection[0];


import Menu from '../components/menu.astro';
import ArrowBouncing from '../components/arrowBouncing.astro';
import AvatarMain from '../components/avatarMain.astro'
---

<!----
openmoji.org
------>

<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style define:vars={{selectedIndex}}>
        body {
            background-color: var(--selectedIndex);
        }

        @font-face {
            font-family: 'JetBrainsMono';
            src: url('/fonts/JetBrainsMono-Medium.woff2') format('woff');
            font-weight: normal;
            font-style: normal;
            font-display: swap;
        }


    </style>
    <title>SmokingPuddle58's Site</title>
</head>


<main>
    <div style="font-family: 'JetBrainsMono','serif';">
        <Menu></Menu>
        <ArrowBouncing></ArrowBouncing>
        <AvatarMain></AvatarMain>

    </div>
</main>
</html>
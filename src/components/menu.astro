<script is:inline>
    function toggleMenu() {
        // Check if the page is a mobile website. If yes then do not hide the menu.
        if (!window.matchMedia("(max-width: 600px)").matches) {
            return false;
        }
        // Select all the menu items.
        let navLink = document.querySelectorAll('.nav-links');
        for (let i = 0; i < navLink.length; i++) {
            navLink[i].classList.toggle('expanded');
        }
        return true;
    }
</script>

